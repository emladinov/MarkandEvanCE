<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_acc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.evan.markandevance.addAcc">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="48dp"
        android:id="@+id/WebIn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Website" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/UnIn"
        android:layout_below="@+id/WebIn"
        android:layout_alignLeft="@+id/WebIn"
        android:layout_alignStart="@+id/WebIn"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/PwIn"
        android:layout_below="@+id/UnIn"
        android:layout_alignLeft="@+id/UnIn"
        android:layout_alignStart="@+id/UnIn"
        android:hint="Password" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PwIn"
        android:layout_marginTop="35dp"
        android:id="@+id/submit"
        android:layout_alignRight="@+id/PwIn"
        android:layout_alignEnd="@+id/PwIn"
        android:layout_alignLeft="@+id/PwIn"
        android:layout_alignStart="@+id/PwIn"
        android:onClick="onClick" />
</RelativeLayout>
